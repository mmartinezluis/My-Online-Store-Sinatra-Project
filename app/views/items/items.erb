
<h1>Listings</h1>
<% @items.each do |item| %>
  <div>
  <% if item.status == "listing" %>
    <% if item.user == current_user %>
      <%= item.name %><br>$ <%= item.show_price %><br>Seller: <%= item.user.username %><bt>Stock: <%= item.stock %><br>
    <% else %>
      <a href="buy/<%= item.id %>"><%= item.name %><br>$ <%= item.show_price %><br>Seller: <%= item.user.username %><br>Stock: <%= item.stock %></a><br>   
    <% end %>
  <% end %>
  </div>
<% end %>