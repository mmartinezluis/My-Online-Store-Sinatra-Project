<h1>Listings</h1>
<section class="boxes" id="items-index">
  <% User.all_users_listings.each do |item| %>
    <div class="item-box" id="items-index-item-box">
      <% if item.status == "listing" %>
        <% if item.user == current_user %>
          <h1><%= item.name %></h1>
          <%= item.show_price %><br>
          Seller: <%= item.user.username %><br>
          Stock: <%= item.stock %>
        <% else %>
          <h1><a href="/items/<%= item.id %>"><%= item.name %></a></h1>
          <%= item.show_price %><br>
          Seller: <%= item.user.username %><br>
          Stock: <%= item.stock %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</section>