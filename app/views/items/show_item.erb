
<% if @item.status == "listing" && @item.user == current_user %>
  <p>Listing</p>
  <div class="item_box">
    <%= erb :'items/partials/show' %><br>
    <a href="/items/<%= @item.id %>/edit" id="edit_listing"><input type="button" value="Edit Listing"></a>
    <form action="/items/<%= @item.id %>" method="post">
      <input type="hidden" id="hidden" name="_method" value="delete">
      <input type="submit" value="Delete" id="delete_button">
    </form>
  </div>
<% else %>
<% erb :'partials/error' %>
  <div class="item_boxr">
    <%= erb :'items/partials/show' %><br>
    <a href="/add_item/<%= @item.id %>" id="add_item_link">Add to Cart</a><br>
    <a href="/buy/<%= @item.id %>" id="buy_link">Buy Now</a>
  </div>
<% end %>

